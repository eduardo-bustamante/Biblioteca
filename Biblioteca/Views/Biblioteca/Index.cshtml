@model IEnumerable<BibliotecaModel>


<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Emprestimo</h1>
        <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar Novo Emprestimo</a>
    </div>


    <table id="Emprestimos" class="table table-light table-hover mt-5">


        <thead>
            <tr>
                <th scope="col">Livro</th>
                <th scope="col">Autor</th>
                <th scope="col">Idioma</th>
                <th scope="col">Data de Cadastro</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var biblioteca in Model)
                {
                    <tr>
                        <th scope="row">@biblioteca.Titulo</th>
                        <td>@biblioteca.Autor</td>
                        <td>@biblioteca.Idioma</td>
                        <td>@biblioteca.DataCadastro>
                        <td>
                            <a class="btn btn-primary mx-2" asp-controller="Biblioteca" asp-action="Detalhes" asp-route-id="@biblioteca.Id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-warning mx-2" asp-controller="Biblioteca" asp-action="Editar" asp-route-id="@biblioteca.Id"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a class="btn btn-danger mx-2" asp-controller="Biblioteca" asp-action="Excluir" asp-route-id="@biblioteca.Id"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>


</div>